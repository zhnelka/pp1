//E. Геометрическая прогрессия
#include <iostream>

using namespace std;

int main() {
    double a;
    int n;
    cin >> a >> n;

    double sum = 1;
    double currentTerm = 1;

    for (int i = 1; i <= n; ++i) {
        currentTerm *= a;
        sum += currentTerm;
    }

    cout << sum << endl;
    return 0;
}
